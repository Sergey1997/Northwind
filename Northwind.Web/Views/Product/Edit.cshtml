@model Northwind.Web.Models.EditProductViewModel;

@{
}

<form asp-action="Edit" asp-controller="Product" method="post">
    <h4>Product @Model.ProductId</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="ProductId" />
    </div>
    <div class="form-group">
        <label asp-for="ProductName" class="control-label">Product Name</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName"></span>
    </div>
    <div>
        <label asp-for="CategoryId"></label><br />
        <select asp-for="CategoryId" asp-items="ViewBag.Categories">
            <option selected="selected" disabled="disabled">
                Choose Category
            </option>
        </select>
        <span asp-validation-for="CategoryId"></span>
    </div>
    <div>
        <label asp-for="SupplierId"></label><br />
        <select asp-for="SupplierId" asp-items="ViewBag.Suppliers">
            <option selected="selected" disabled="disabled">
                Choose Category
            </option>
        </select>
        <span asp-validation-for="SupplierId"></span>
    </div>
    <div>
        <label asp-for="Discontinued" class="control-label">Discontinued</label>
        <input type="text" asp-for="Discontinued" class="form-control" />
        <span asp-validation-for="Discontinued"></span>
        <span asp-validation-for="Discontinued"></span>
    </div>

    <div>
        <input type="submit" value="Save" class="btn btn-success" />
    </div>
</form>